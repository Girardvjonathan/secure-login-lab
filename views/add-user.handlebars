<h2 class="page-header">Add a new user</h2>
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}

<p>Please enter the details of the new user.</p>

<form action="/users/add" method="post">	

	<div class="form-group">
		<input class="form-control" autocomplete="new-password" type="text" required name="username" placeholder="Username"/>
	</div>
	<div class="form-group">
		<input class="form-control" autocomplete="new-password" type="email" required name="email" placeholder="Email"/>
	</div>
	<div class="form-group">
		<input class="form-control" autocomplete="new-password" type="text" required name="name" placeholder="Name"/>
	</div>
	<div class="form-group">
		<select name="role" class="form-control">
			<option value="1">Préposé aux clients résidentiels</option>
			<option value="2">Préposé aux clients d’affaires</option>
			<option value="3">Administrateur</option>
		</select>
	</div>

	<div class="form-group">
		<label for="max-nb-attempts">This action requires you to enter your password for security purposes.</label>
		<input class="form-control" autocomplete="new-password" type="password" required name="currentPassword" placeholder="Your password"/>
	</div>
	<input class="btn btn-primary btn-lg" type="submit" value="Add user" />
</form>