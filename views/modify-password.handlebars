<h2 class="page-header">Modify your password</h2>
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}

<p>Please choose a new password.</p>

<form action="/users/modify-password" method="post">	
	<div class="form-group">
		<input class="form-control" type="password" required name="currentPassword" placeholder="Current password"/>
	</div>
	<div class="form-group">
		<input class="form-control" type="password" required name="newPassword" placeholder="New password"/>
	</div>
	<div class="form-group">
		<input class="form-control" type="password" required name="newPasswordConfirm" placeholder="New password confirmation"/>
	</div>

	<input class="btn btn-primary btn-lg" type="submit" value="Submit" />
</form>