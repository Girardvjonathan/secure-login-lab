<h2 class="page-header">Reset your password</h2>
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}

<p>Please choose a new password.</p>

<form action="/users/reset-password" method="post">
	<div class="form-group">
		<input class="form-control" type="password" required name="password" placeholder="New password"/>
	</div>
	<div class="form-group">
		<input class="form-control" type="password" required name="passwordConfirm" placeholder="Confirmation"/>
	</div>

	<input type="hidden" name="email" value="{{email}}" />
	<input type="hidden" name="token" value="{{token}}" />

	<input class="btn btn-primary btn-lg" type="submit" value="Submit" />
</form>