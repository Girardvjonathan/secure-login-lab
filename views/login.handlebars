<h2 class="page-header">Account Login</h2>
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger {{#if shake}}shake-constant shake-constant--hover shake-vertical{{/if}}">{{msg}}</div>
    {{/each}}
{{/if}}

<form method="post" action="/users/login">
  <div class="form-group">
    <label>Username</label>
    <input type="text" class="form-control" name="username" placeholder="Username">
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="password" class="form-control" name="password" placeholder="Password">
  </div>
  {{#if passwordResettable}}
	  <p class="text-right">
	  	<a href="/users/reset-password/forgot-password">Forgot your Password?</a>
	  </p>
  {{/if}}
  <button type="submit" class="btn btn-default">Submit</button>
</form>

{{#if troll}}
  <img class="trollolol" src="/img/snoop.gif"/>
  <img class="pulp" src="/img/pulp.gif"/>
{{/if}}